pkgname=gnome-calculator
pkgver=45.0.2
pkgrel=1
pkgdesc="GNOME Scientific calculator"
url="https://wiki.gnome.org/Apps/Calculator"
arch=('x86_64')
groups=('gnome-base')
license=(GPL)
depends=(gtk3 dconf gtksourceview4 mpfr libsoup libmpc)
makedepends=(yelp-tools vala git appstream-glib meson)
options=(!emptydirs)
url="http://www.gnome.org"
install=gnome-calculator.install
source=(https://gitlab.gnome.org/GNOME/$pkgname/-/archive/$pkgver/$pkgname-$pkgver.tar.bz2)

build() {
    export CFLAGS+=" -Wno-incompatible-pointer-types -Wno-implicit-function-declaration"
    avouch-meson ${pkgname}-${pkgver} build
    meson compile -C build
}

package() {
    DESTDIR="$pkgdir" ninja -C build install
}

