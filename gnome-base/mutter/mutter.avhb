pkgbase=mutter
pkgname=(
  mutter
  mutter-docs
)
pkgver=45.4
pkgrel=1
pkgdesc="Window manager and compositor for GNOME"
arch=('x86_64')
groups=('gnome-base')
url="https://gitlab.gnome.org/GNOME/mutter"
license=(GPL)
depends=(
  colord
  dconf
  gnome-desktop-4
  gnome-settings-daemon
  graphene
  gsettings-desktop-schemas
  iio-sensor-proxy
  lcms2
  libcanberra
  libdisplay-info
  libei
  libgudev
  libinput
  libsm
  libsysprof-capture
  libxkbcommon-x11
  libxkbfile
  pipewire
  startup-notification
  xorg-xwayland
)
makedepends=(
  egl-wayland
  gi-docgen
  git
  gobject-introspection
  gtk3
  meson
  sysprof
  wayland-protocols
  xorg-server
  xorg-server-xvfb
)
checkdepends=(
  gnome-session
  python-dbusmock
  wireplumber
  zenity
)

install=mutter.install
source=(https://gitlab.gnome.org/GNOME/mutter/-/archive/$pkgver/mutter-$pkgver.tar.bz2)

prepare() {
  cd $pkgname-$pkgver
  # Make tests run
  sed -i '/catchsegv/d' meson.build
}

build() {
local meson_options=(
    -D docs=true
    -D egl_device=true
    -D installed_tests=false
    -D libdisplay_info=true
    -D wayland_eglstream=true
  )

  CFLAGS="${CFLAGS/-O2/-O3} -fno-semantic-interposition"
  LDFLAGS+=" -Wl,-Bsymbolic-functions"

  avouch-meson $pkgname-$pkgver build "${meson_options[@]}"
  meson compile -C build

}

