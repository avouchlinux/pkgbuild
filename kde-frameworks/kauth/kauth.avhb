pkgname=kauth
pkgver=6.6.0
pkgrel=1
pkgdesc='Abstraction to system policy and authentication features'
arch=('x86_64')
groups=('kde-frameworks')
url='https://projects.kde.org/projects/frameworks/kauth'
license=('LGPL')
depends=(kcoreaddons polkit-qt5)
makedepends=(extra-cmake-modules qt5-tools qt5-doc clang doxygen)
source=("http://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

build() {
	cmake -S ${pkgname}-${pkgver} -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DLIB_INSTALL_DIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON \
		-DCMAKE_DISABLE_FIND_PACKAGE_PythonModuleGeneration=ON
	ninja -C build
}

package() {
	DESTDIR="${pkgdir}" ninja -C build install
}