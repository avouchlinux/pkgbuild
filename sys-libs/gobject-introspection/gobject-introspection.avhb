pkgbase=gobject-introspection
pkgname=('gobject-introspection' 'gobject-introspection-runtime')
pkgver=1.80.1
pkgrel=1
_glibver=2.80.0
arch=('x86_64')
groups=('sys-libs')
pkgdesc="Introspection system for GObject-based libraries"
url="https://wiki.gnome.org/Projects/GObjectIntrospection"
license=(LGPL GPL)
depends=(python-mako python-markdown)
makedepends=(cairo gtk-doc python-sphinx meson)
options=(!emptydirs)
source=("https://gitlab.gnome.org/GNOME/gobject-introspection/-/archive/$pkgver/gobject-introspection-$pkgver.tar.bz2"
        "https://gitlab.gnome.org/GNOME/glib/-/archive/$_glibver/glib-$_glibver.tar.bz2")

build() {
  avouch-meson $pkgbase-$pkgver build \
    -D gtk_doc=true \
    -D glib_src_dir="$srcdir/glib-$_glibver"
  meson compile -C build
}

# check() {
#   meson test -C build
# }

_pick() {
  local p="$1" f d; shift
  for f; do
    d="$srcdir/$p/${f#$pkgdir/}"
    mkdir -p "$(dirname "$d")"
    mv "$f" "$d"
    rmdir -p --ignore-fail-on-non-empty "$(dirname "$f")"
  done
}

package_gobject-introspection() {
  depends+=("gobject-introspection-runtime=$pkgver-$pkgrel")

  meson install -C build --destdir "$pkgdir"

  cd "$pkgdir"

  python -m compileall -d /usr/lib/$pkgbase usr/lib/$pkgbase
  python -O -m compileall -d /usr/lib/$pkgbase usr/lib/$pkgbase

  _pick runtime usr/lib/lib*
  _pick runtime usr/lib/girepository-*
}

package_gobject-introspection-runtime() {
  pkgdesc+=" (runtime library)"
  depends=(glib2)
  provides+=(libgirepository-1.0.so)

  mv runtime/* "$pkgdir"
}