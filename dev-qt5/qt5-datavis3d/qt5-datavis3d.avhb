pkgname=qt5-datavis3d
_realname=${pkgname/5-/}
_basever=5.15.3
pkgver=5.15.3+kde+r0
pkgrel=1
_commit=19af9584f7b80928ee49950c573c770af68c9519
arch=('x86_64')
groups=('dev-qt')
url='https://www.qt.io'
license=('GPL3')
pkgdesc='Qt Data Visualization module'
depends=('qt5-base')
makedepends=('qt5-declarative' 'git')
optdepends=('qt5-declarative: QML bindings')
source=(git+https://invent.kde.org/qt/qt/$_realname#commit=$_commit)
sha256sums=('SKIP')  
options=(debug)

getsrc(){
  git clone https://invent.kde.org/qt/qt/$_realname.git
}

pkgver() {
  cd $_realname
  git checkout $_commit
  echo "$_basever+kde+r"`git rev-list --count v$_basever-lts-lgpl..$_commit`
}

prepare() {
  mkdir -p build
}

build() {
  cd build

  qmake ../${_realname}
  make ${MAKEFLAGS}
}

package() {
  cd build
  make INSTALL_ROOT="$pkgdir" install

  # Drop QMAKE_PRL_BUILD_DIR because reference the build dir
  find "$pkgdir/usr/lib" -type f -name '*.prl' \
    -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}