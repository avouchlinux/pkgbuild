pkgname=qt6-declarative
_qtver=6.0.2
pkgver=${_qtver/-/}
pkgrel=1
_realname="${pkgname/6-/}-everywhere-src-${_qtver}"
arch=('x86_64')
groups=('dev-qt6')
url='https://www.qt.io'
license=(GPL3 LGPL3 FDL custom)
pkgdesc='Classes for QML and JavaScript languages'
depends=(qt6-base)
makedepends=(cmake python vulkan-headers at-spi2-core)
source=("https://download.qt.io/official_releases/qt/${pkgver%.*}/$_qtver/submodules/$_pkgfn.tar.xz")
sha256sums=('13d6b12d1c1eabdc6e6775e344e3479bf42ffabeadb20bee94882dc3eb003820')

build() {
  cmake -B build -S $_realname -G Ninja
  ninja -C build
}

package() {
  DESTDIR="${pkgdir}" ninja -C build install

# Symlinks for backwards compatibility
  mkdir "$pkgdir"/usr/bin
  for b in "${pkgdir}"/usr/lib/qt6/bin/*; do
    ln -rs "$pkgdir"/usr/lib/qt6/bin/$(basename $b) "$pkgdir"/usr/bin/$(basename $b)-qt6
  done

  install -d "$pkgdir"/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base "$pkgdir"/usr/share/licenses/$pkgname
}