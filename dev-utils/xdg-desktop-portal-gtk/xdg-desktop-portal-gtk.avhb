pkgname=xdg-desktop-portal-gtk
pkgver=1.12.0
pkgrel=1
pkgdesc="A GTK+ backend for xdg-desktop-portal"
url="https://github.com/flatpak/xdg-desktop-portal-gtk"
arch=('x86_64')
groups=('x11-misc')
license=(LGPL2.1)
depends=(gtk3 gnome-desktop gnome-keyring)
makedepends=(xdg-desktop-portal python git evince)
optdepends=("evince: Print preview")
provides=(xdg-desktop-portal-impl)
_commit=3a40d4bbcac48fa6dec7bedcc0206074a0218884  # tags/1.7.1^0
source=("git+https://github.com/flatpak/xdg-desktop-portal-gtk#commit=$_commit"
        https://github.com/flatpak/xdg-desktop-portal-gtk/commit/adb72687ccda69b83509f05f80e4a226a2faaf1f.patch)
sha256sums=('SKIP')

prepare() {
  cd $pkgname-$pkgver
}

build() {
  cd $pkgname-$pkgver
  ./autogen.sh --prefix=/usr --libexecdir=/usr/lib
  make ${MAKEFLAGS}
}

check() {
  cd $pkgname-$pkgver
  make check
}

package() {
  cd $pkgname-$pkgver
  DESTDIR="$pkgdir" make install
}
