pkgname=gtk-doc
pkgver=1.33.2
pkgrel=1
pkgdesc="Documentation tool for public library API"
arch=(any)
groups=('dev-utils')
url="https://www.gtk.org/gtk-doc/"
arch=(any)
license=(GPL FDL)
depends=(docbook-xsl docbook-xml glib2-docs python-lxml python-pygments python-anytree)
makedepends=(dblatex git yelp-tools meson)
checkdepends=(bc gtk3 python3-six python3-parameterized)
optdepends=('dblatex: PDF support')
source=("https://gitlab.gnome.org/GNOME/$pkgname/-/archive/$pkgver/$realname-$pkgver.tar.bz2"
        fixperms.diff)

# pkgver() {
#   cd $pkgname
#   git describe --tags | sed -e 's/GTK_DOC_//' -e 's/_/\./g' -e 's/-/+/g'
# }

prepare() {
  cd $pkgname-$pkgver
  patch -Np1 -i ../fix.diff
}

build() {
    avouch-meson $pkgname-$pkgver build
    ninja -C build
}

check() {
    # Tests don't work yet
    meson test -C build --print-errorlogs || :
}

package() {
    DESTDIR="$pkgdir" meson install -C build
    python -m compileall -d /usr/lib "$pkgdir/usr/lib"
    python -O -m compileall -d /usr/lib "$pkgdir/usr/lib"
}