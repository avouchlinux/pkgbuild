#!/bin/bash -ex
# Meson wrapper for Avouch packaging

exec meson setup \
  --prefix        /usr \
  --libdir        lib \
  --libexecdir    lib \
  --sbindir       bin \
  --buildtype     plain \
  --auto-features enabled \
  --wrap-mode     nodownload \
  -D              b_lto=true \
  -D              b_pie=true \
  -D              python.bytecompile=1 \
  "$@"