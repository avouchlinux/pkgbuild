	### change to english locale!
	#systemd-nspawn  export LANG="en_US"

	# generating locales
echo "Generating locales"
sed -i 's/#ar_EG.UTF-8 UTF-8/ar_EG.UTF-8 UTF-8/g' ${MOUNTPOINT}/etc/locale.gen
sed -i 's/#cs_CZ/cs_CZ/g' ${MOUNTPOINT}/etc/locale.gen
