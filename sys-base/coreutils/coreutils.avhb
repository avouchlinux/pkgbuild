pkgname=coreutils
pkgver=9.0
pkgrel=1
pkgdesc='The basic file, shell and text manipulation utilities of the GNU operating system'
arch=('x86_64')
groups=('sys-base')
url='https://www.gnu.org/software/coreutils/'
depends=('glibc' 'acl' 'attr' 'gmp' 'libcap' 'openssl')
source=("https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz"{,.sig})
validpgpkeys=('6C37DC12121A5006BC1DB804DF6FD971306037D9') # PÃ¡draig Brady

prepare() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	# patch -Np1 -i ../coreutils-selinux.patch
	patch -Np1 -i ../01-fix-fs72253.patch
	autoreconf -vif
}

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	FORCE_UNSAFE_CONFIGURE=1 \
	./configure --prefix=/usr \
	--libexecdir=/usr/lib \
	--with-packager="Avouch Linux" \
	--with-packager-bug-reports="https://bugs.avouch.org/" \
	--with-openssl \
	--with-selinux \
	--enable-no-install-program=groups,hostname,kill,uptime
	# group and hostname provided by others

	make ${MAKEFLAGS} all
}

check() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	# make check
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="$pkgdir" install
	#install missing binary
	cp 'src/dir' "$pkgdir/usr/bin/dir"
}

